// Desafio Super Trunfo - Menu interativo + switch + if-else aninhado
#include <stdio.h>
#include <string.h>

int main() {
    // ==========================
    // Declaração das variáveis
    // ==========================

    // Carta 1
    char estado1;
    char codigo1[20];
    char nome1[60];
    unsigned long int populacao1;
    float area1;
    float pib1;
    int pontos1;

    // Carta 2
    char estado2;
    char codigo2[20];
    char nome2[60];
    unsigned long int populacao2;
    float area2;
    float pib2;
    int pontos2;

    // ==========================
    // Entrada (Cadastro) - Carta 1
    // ==========================
    printf("Cadastro da carta 1\n");
    printf("Digite uma letra de 'A' a 'H' representando um estado: ");
    scanf(" %c", &estado1);

    printf("Digite a letra do estado seguida de um numero de 01 a 04: ");
    scanf("%19s", codigo1);

    getchar(); // limpar '\n' do buffer

    printf("Digite o nome da cidade: ");
    fgets(nome1, sizeof(nome1), stdin);
    nome1[strcspn(nome1, "\n")] = '\0';

    printf("Digite a populacao: ");
    scanf("%lu", &populacao1);

    printf("Digite a area em km2: ");
    scanf("%f", &area1);

    printf("Digite o PIB: ");
    scanf("%f", &pib1);

    printf("Digite o numero de pontos turisticos: ");
    scanf("%d", &pontos1);

    printf("\n-----------------------------\n\n");

    // ==========================
    // Entrada (Cadastro) - Carta 2
    // ==========================
    printf("Cadastro da carta 2\n");
    printf("Digite uma letra de 'A' a 'H' representando um estado: ");
    scanf(" %c", &estado2);

    printf("Digite a letra do estado seguida de um numero de 01 a 04: ");
    scanf("%19s", codigo2);

    getchar(); // limpar '\n'

    printf("Digite o nome da cidade: ");
    fgets(nome2, sizeof(nome2), stdin);
    nome2[strcspn(nome2, "\n")] = '\0';

    printf("Digite a populacao: ");
    scanf("%lu", &populacao2);

    printf("Digite a area em km2: ");
    scanf("%f", &area2);

    printf("Digite o PIB: ");
    scanf("%f", &pib2);

    printf("Digite o numero de pontos turisticos: ");
    scanf("%d", &pontos2);

    printf("\n-----------------------------\n\n");

    // ==========================
    // Cálculos obrigatórios
    // ==========================
    float densidade1 = (area1 > 0.0f) ? ((float)populacao1 / area1) : 0.0f;
    float pibPerCapita1 = (populacao1 > 0) ? (pib1 / (float)populacao1) : 0.0f;

    float densidade2 = (area2 > 0.0f) ? ((float)populacao2 / area2) : 0.0f;
    float pibPerCapita2 = (populacao2 > 0) ? (pib2 / (float)populacao2) : 0.0f;

    // ==========================
    // MENU interativo (switch)
    // ==========================
    int opcao = -1;

    printf("=== SUPER TRUNFO - COMPARACAO ===\n");
    printf("Cartas cadastradas:\n");
    printf("1) %s (%c)  |  2) %s (%c)\n\n", nome1, estado1, nome2, estado2);

    printf("Escolha o atributo para comparar:\n");
    printf("1 - Populacao\n");
    printf("2 - Area\n");
    printf("3 - PIB\n");
    printf("4 - Pontos turisticos\n");
    printf("5 - Densidade Populacional (MENOR vence)\n");
    printf("0 - Sair\n");
    printf("Opcao: ");

    if (scanf("%d", &opcao) != 1) {
        printf("\nEntrada invalida. Encerrando.\n");
        return 0;
    }

    if (opcao == 0) {
        printf("\nSaindo...\n");
        return 0;
    }

    // ==========================
    // Comparar e exibir resultado
    // ==========================
    int vencedora = 0; // 0 empate, 1 carta1, 2 carta2

    printf("\n=== RESULTADO DA COMPARACAO ===\n");
    printf("Pais 1: %s (%c)\n", nome1, estado1);
    printf("Pais 2: %s (%c)\n\n", nome2, estado2);

    switch (opcao) {
        case 1: { // Populacao
            printf("Atributo: Populacao\n");
            printf("%s: %lu\n", nome1, populacao1);
            printf("%s: %lu\n", nome2, populacao2);

            // if-else aninhado
            if (populacao1 > populacao2) {
                vencedora = 1;
            } else {
                if (populacao2 > populacao1) {
                    vencedora = 2;
                } else {
                    vencedora = 0;
                }
            }
            break;
        }

        case 2: { // Area
            printf("Atributo: Area\n");
            printf("%s: %.6f\n", nome1, area1);
            printf("%s: %.6f\n", nome2, area2);

            if (area1 > area2) {
                vencedora = 1;
            } else {
                if (area2 > area1) {
                    vencedora = 2;
                } else {
                    vencedora = 0;
                }
            }
            break;
        }

        case 3: { // PIB
            printf("Atributo: PIB\n");
            printf("%s: %.6f\n", nome1, pib1);
            printf("%s: %.6f\n", nome2, pib2);

            if (pib1 > pib2) {
                vencedora = 1;
            } else {
                if (pib2 > pib1) {
                    vencedora = 2;
                } else {
                    vencedora = 0;
                }
            }
            break;
        }

        case 4: { // Pontos turisticos
            printf("Atributo: Pontos turisticos\n");
            printf("%s: %d\n", nome1, pontos1);
            printf("%s: %d\n", nome2, pontos2);

            if (pontos1 > pontos2) {
                vencedora = 1;
            } else {
                if (pontos2 > pontos1) {
                    vencedora = 2;
                } else {
                    vencedora = 0;
                }
            }
            break;
        }

        case 5: { // Densidade (MENOR vence)
            printf("Atributo: Densidade Populacional (MENOR vence)\n");
            printf("%s: %.6f\n", nome1, densidade1);
            printf("%s: %.6f\n", nome2, densidade2);

            // regra invertida + if-else aninhado
            if (densidade1 < densidade2) {
                vencedora = 1;
            } else {
                if (densidade2 < densidade1) {
                    vencedora = 2;
                } else {
                    vencedora = 0;
                }
            }
            break;
        }

        default:
            printf("Opcao invalida! Escolha um numero do menu.\n");
            return 0;
    }

    // ==========================
    // Mostrar vencedora (ou empate)
    // ==========================
    if (vencedora == 1) {
        printf("\nVencedora: Carta 1 (%s)\n", nome1);
    } else if (vencedora == 2) {
        printf("\nVencedora: Carta 2 (%s)\n", nome2);
    } else {
        printf("\nEmpate!\n");
    }

    // ==========================
    // Indicadores calculados (mantive)
    // ==========================
    printf("\n--- Indicadores calculados ---\n");
    printf("Carta 1 - Densidade: %.6f | PIB per capita: %.6f\n", densidade1, pibPerCapita1);
    printf("Carta 2 - Densidade: %.6f | PIB per capita: %.6f\n", densidade2, pibPerCapita2);

    return 0;
}
